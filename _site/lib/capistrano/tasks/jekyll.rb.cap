desc 'Push to github -> Deploy on server'
task :jekyll do
  on roles(:blog) do
    run_locally do "git push -f" end
    execute "cd #{deploy_to} && git pull origin master"
    # execute "git pull origin master"
    # execute "jekyll build"
  end
end

